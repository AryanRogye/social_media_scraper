{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "instagram_account_tabs",
    "version": "0.1.0",
    "identifier": "com.aryanrogye",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "instagram_account_tabs",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';"
        }
    },
    "bundle": {
        "active": false,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
